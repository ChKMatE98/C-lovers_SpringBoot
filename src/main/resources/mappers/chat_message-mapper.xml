<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ChatMessage">

	<!-- 초대되려는 채팅방의 최신 메시지 불러내기 -->
	<select id="selectLatestChatMsgIdByChatRoomIdForUpdate" resultType="String">
		SELECT id FROM
		chat_message where chat_room_id=#{chat_room_id} ORDER BY id DESC LIMIT 1 FOR UPDATE
	</select>
</mapper>